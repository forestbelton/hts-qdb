name:                hts-qdb
version:             0.1.0.0
synopsis:            Initial project template from stack
description:         Please see README.md
homepage:            https://github.com/githubuser/hts-qdb#readme
license:             BSD3
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2016 Author name here
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     QDB.Types
                     , QDB.API
                     , QDB.API.Quote
                     , QDB.Model.Quote
                     , QDB.Server.Quote
  build-depends:       base >= 4.7 && < 5
                     , servant >= 0.7.1 && < 0.8
                     , servant-server >= 0.7.1 && < 0.8
                     , text >= 1.2.2.1 && < 1.3
                     , time >= 1.5.0.1 && < 1.6
                     , aeson >= 0.11.2.1 && < 0.12
                     , http-api-data >= 0.2.4 && < 0.3
                     , transformers >= 0.4.2.0 && < 0.5
  default-language:    Haskell2010

executable hts-qdb-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , hts-qdb
                     , servant-server >= 0.7.1 && < 0.8
                     , warp >= 3.2.8 && < 3.3
                     , wai >= 3.2.1.1 && < 3.3
                     , wai-extra >= 3.0.16.1 && < 3.0.17
                     , wai-middleware-static >= 0.8.0 && < 0.9
  default-language:    Haskell2010

test-suite hts-qdb-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , hts-qdb
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/hts-qdb
